<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusableInTouchMode="true"
    tools:context=".CriticalDates">
    <ScrollView
        android:id="@+id/ScrlView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView_DateOfIncident">
            <TextView
                android:id="@+id/textView_DateOfIncident"
                android:text="@string/text_DateOfIncident"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/textView_DateOfIncident_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:width="120dp"
                    android:height="40dp"
                    android:textSize="22dp"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/textView_DateOfIncident_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="140dp"
                    android:width="60dp"
                    android:height="40dp"
                    android:textSize="22dp"
                    />
                <ImageButton
                    android:id="@+id/button_DateOfIncident_Date"
                    android:src="@drawable/calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60dp"
                    />
                <ImageButton
                    android:id="@+id/button_DateOfIncident_Time"
                    android:src="@drawable/clock"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/textView_ArrivedAtScene"
                android:text="@string/text_ArrivedAtScene"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/textView_ArrivedAtScene_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:width="120dp"
                    android:height="40dp"
                    android:textSize="22dp"
                    />
                <TextView
                    android:id="@+id/textView_ArrivedAtScene_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="140dp"
                    android:width="60dp"
                    android:height="40dp"
                    android:textSize="22dp"
                    />
                <ImageButton
                    android:id="@+id/button_ArrivedAtScene_Date"
                    android:src="@drawable/calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60dp"
                    />
                <ImageButton
                    android:id="@+id/button_ArrivedAtScene_Time"
                    android:src="@drawable/clock"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/textView_DepartedScene"
                android:text="@string/text_DepartedScene"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/textView_DepartedScene_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:width="120dp"
                    android:height="40dp"
                    android:textSize="22dp"
                    />
                <TextView
                    android:id="@+id/textView_DepartedScene_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="140dp"
                    android:width="60dp"
                    android:height="40dp"
                    android:textSize="22dp"
                    />
                <ImageButton
                    android:id="@+id/button_DepartedScene_Date"
                    android:src="@drawable/calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60dp"
                    />
                <ImageButton
                    android:id="@+id/button_DepartedScene_Time"
                    android:src="@drawable/clock"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/textView_ArrivedAtMajorTraumaCentre"
                android:text="@string/text_ArrivedAtMajorTraumaCentre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/textView_ArrivedAtMajorTraumaCentre_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:width="120dp"
                    android:height="40dp"
                    android:textSize="22dp"
                    />
                <TextView
                    android:id="@+id/textView_ArrivedAtMajorTraumaCentre_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="140dp"
                    android:width="60dp"
                    android:height="40dp"
                    android:textSize="22dp"
                    />
                <ImageButton
                    android:id="@+id/button_ArrivedAtMajorTraumaCentre_Date"
                    android:src="@drawable/calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60dp"
                    />
                <ImageButton
                    android:id="@+id/button_ArrivedAtMajorTraumaCentre_Time"
                    android:src="@drawable/clock"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <TextView
                android:text="@string/text_LasCadNumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/editText_LasCadNumber"
                android:inputType="numberDecimal"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:height="40dp"
                android:singleLine="true"
                />
                
            <Button
                android:id="@+id/button"
                android:text="@string/text_Next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#6582ff"
                android:textColor="#ffffff"
                android:textSize="26dp"
                android:onClick="onButtonClick_Next"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>