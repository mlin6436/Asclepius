<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CriticalDates">
    <LinearLayout
        android:id="@+id/layoutForScroll"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="294dp"
            android:id="@+id/imageView"
            android:src="@drawable/kings_100_years"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/button"
        android:onClick="onButtonClick_Next"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/layoutForScroll"
        android:layout_alignRight="@+id/layoutForScroll"
        android:background="#6582ff"
        android:textColor="#ffffff"
        android:textSize="26dp" />
</RelativeLayout>
